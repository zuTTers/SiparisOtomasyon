                            </tr>


                            @foreach (var order in Model.OrdersList)
                            {
                                <tr>
                                    <td>
                                        <a href="../Home/OrderDelete?Order_Id=@order.Order_Id" class="btn-xs btn btn-danger"><span class="fa fa-trash"></span></a>
                                        <button data-toggle="modal" data-target="#myModal" onclick="GetOrder(@order.Order_Id)" class="btn-xs btn btn-warning" style="margin-left:5px;"><span class="fa fa-pencil"></span></button>
                                    </td>
                                    <td>@order.Order_Id</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.Debt </td>
                                    <td>@String.Format("{0:N0}", @order.NetTotal) ₺</td>
                                    <td>@String.Format("{0:N0}", @order.TotalPrice) ₺</td>
                                    <td>@order.OrderDate.Value.ToShortDateString()</td>
                                    <td>
