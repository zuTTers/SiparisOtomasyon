                                <td class="text-uppercase"><b>Teslim Tarihi</b></td>

                                @{
                                    if (string.IsNullOrEmpty(ViewBag.oname) || (ViewBag.oname == "durum" && ViewBag.otype == "desc"))
                                    {
                                        <td class="text-uppercase">@Html.ActionLink("T.Durum", "Index", new { oname = "durum", otype = "asc" }, new { @class = " glyphicon glyphicon-plus", @style = "font-weight:600 !important;" }) </td>
                                    }
                                    else if (ViewBag.oname == "durum" && ViewBag.otype == "asc")
                                    {
                                        <td class="text-uppercase">@Html.ActionLink("T.Durum", "Index", new { oname = "durum", otype = "desc" }, new { @class = " glyphicon glyphicon-minus", @style = "font-weight:600 !important;" }) </td>
                                    }
                                    else
                                    {
                                        <td class="text-uppercase">@Html.ActionLink("T.Durum", "Index", new { oname = "durum", otype = "asc" }, new { @class = " glyphicon glyphicon-plus", @style = "font-weight:600 !important;" }) </td>
                                    }

                                }
