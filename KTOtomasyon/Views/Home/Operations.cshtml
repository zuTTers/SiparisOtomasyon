@model  KTOtomasyon.Models.AllList
@{
    ViewBag.Title = "İşlemler";
}
<br />
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="header">
                <div class="col-lg-6">
                    <h4 class="title" style="color:blue;"><span class="fa fa-users"></span> &nbsp; İşlemler</h4>
                    <p class="category">İşlemler Listesi</p>
                </div>
                <div class="col-lg-6">
                    <div class="category">
                        <form action="@Url.Action("Operations","Home")" method="post">
                            <div class="col-lg-10"><input name="filter" type="search" class="form-control text-primary" placeholder="Ad/Soyad Ara" /></div>
                            <div class="col-lg-2"><input type="submit" role="img" value="Ara" class="btn btn-primary" /></div>

                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-condensed">
                            <tr>
                                <td class="text-uppercase"><b>Tadilat No</b></td>
                                <td class="text-uppercase"><b>İşlem Adı</b></td>
                                <td class="text-uppercase"><b>Tutarı</b></td>
                                <td></td>
                            </tr>
                            @foreach (var operation in Model.Operations.OrderByDescending(z => z.Id).Where(x => x.IsActive == true))
                            {
                            <tr>
                                <td>@operation.Id</td>
                                <td>@operation.Name</td>
                                <td>@operation.Price ₺</td>
                                <td>@Html.ActionLink(" İncele", "OperationDetail", "Home", new { id = operation.Id }, new { @class = "btn btn-success" }) </td>
                            </tr>
                            }
                        </table>
                        <ul class="pagination pagination-sm">
                            <li>
                                @{
                                    for (int i = 1; i <= Model.TotalPage; i++)
                                    {
                                        if (i == Model.CurrentPage)
                                        {
                                            @Html.ActionLink(i.ToString(), "Operations", new { p = i }, new { @class = "text-danger" });

                                        }
                                        else
                                        {
                                            @Html.ActionLink(i.ToString(), "Operations", new { p = i });
                                        }
                                    }
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
