                                        <option data-img-src="../img/e/11.jpg" value="36">Palto</option>
                                        <option data-img-src="../img/e/12.jpg" value="37">Pantolon</option>
                                        <option data-img-src="../img/e/13.jpg" value="38">Şişme Mont</option>
                                        <option data-img-src="../img/e/14.jpg" value="39">Şişme Yelek</option>
                                        <option data-img-src="../img/e/15.jpg" value="40">Şort</option>
                                        <option data-img-src="../img/e/16.jpg" value="41">Tişort</option>
                                        <option data-img-src="../img/e/17.jpg" value="42">Üst Eşofman</option>
                                    </optgroup>
                                    <optgroup label="Diğer">
                                        <option data-img-src="../img/producticons/0'.png" value="43">Diğer</option>
                                    </optgroup>
                                </select>
                            </div>
                            <div class="col-lg-2"><input type="submit" role="img" value="Ara" class="btn btn-primary" /></div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-condensed">
                            <tr>
                                <td class="text-uppercase"><b>Ürün Adı</b></td>
                                <td class="text-uppercase"><b>İşlem Adı</b></td>
                                <td class="text-uppercase"><b>B.Tutar</b></td>
                                <td></td>
                            </tr>
                            @foreach (var operation in Model.OperationList.OrderByDescending(x => x.Operation_Id).Where(x => x.IsActive == true))
                            {
                                <tr>
                                    <td>@Model.ProductName</td>
                                    <td>@operation.Name</td>
                                    <td>@operation.Price ₺</td>
                                    <td>@Html.ActionLink("Düzenle", "OperationEdit", "Home", new { id = operation.Operation_Id }, new { @class = "btn btn-primary" }) </td>
                                </tr>
                            }
                        </table>
                        <!--simplePagination Plugin-->
                        @*<div class="pagination-page"></div>*@
                        <ul class="pagination pagination-sm">
                                <li>
                                    @{
                                        for (int i = 1; i <= Model.TotalPage; i++)
                                        {
                                            if (i == Model.CurrentPage)
                                            {
                                                @Html.ActionLink(i.ToString(), "Operations", new { p = i }, new { @class = "text-danger" });

                                            }
                                            else
                                            {
                                                @Html.ActionLink(i.ToString(), "Operations", new { p = i });
                                            }
                                        }
                                    }
                                </li>
                            </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
