@model KTOtomasyon.Models.DisplayOrderDetail

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" src="~/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title> Sample Terzi </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Zubeyir Kocalioglu" />

    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/assets/css/light-bootstrap-dashboard.css" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/ImageSelect.css" rel="stylesheet" />
    <link href="~/assets/css/demo.css" rel="stylesheet" />
    <link href="~/Content/Flat.css" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="~/Content/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="orange">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" class="simple-text">
                        <img src="~/img/logooldu.png" width="96" height="52" />
                        <br />
                    </a>
                </div>
                <ul class="nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-home"></i>
                            <p>Genel</p>
                        </a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Customers" ? "active" : "")">
                        <a href="@Url.Action("Customers", "Home")">
                            <i class="fa fa-users"></i>
                            <p>Müşteriler</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                        <a href="@Url.Action("Orders", "Home")">
                            <i class="fa fa-list"></i>
                            <p>Siparişler</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                        <a href="@Url.Action("Products", "Home")">
                            <i class="fa fa-book"></i>
                            <p>Ürünler</p>
                        </a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Operations" ? "active" : "")">
                        <a href="@Url.Action("Operations", "Home")">
                            <i class="fa fa-flash"></i>
                            <p>Tadilatlar</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                        <a href="@Url.Action("Users", "Home")">
                            <i class="fa fa-user"></i>
                            <p>Personeller</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @{
                                if (Session["UserId"] != null)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            @Session["Name"].ToString()
                                            <b class="caret hidden-sm hidden-xs"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("UserProfile", "Login", new { id = Session["UserId"]})">
                                                    Profil Bilgileri
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("LogOut", "Login")">
                                                    Çıkış
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                            }
                            @if (Session["UserId"] == null)
                            {
                                <li>

                                    <a href="@Url.Action("Index","Login")" class="btn btn-default pull-right">
                                        Sisteme Giriş
                                    </a>
                                </li>
                            }
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>

                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()

            </div>

            <footer class="footer navbar-fixed-bottom">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Home")">
                                    Genel
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Customers","Home")">
                                    Müşteriler
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Products","Home")">
                                    Ürünler
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Orders","Home")">
                                    Siparişler
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="@Url.Action("Index","Home")">Programmed by zuTTers</a>, Terzi Otomasyonu Sistemi
                    </p>
                </div>
            </footer>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content" style="width:800px !important;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Yeni Sipariş</h4>
                </div>
                <div class="modal-body ">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6 class="text-muted">Müşteri Ad/Soyad</h6>
                            @Html.TextBox("CustomerName", "", new { @class = "form-control", @placeholder = "Ad", @id = "txtMAdi", @style = "height:30px !important;" })
                            <h6 class="text-muted"> Teslim Tarihi </h6>
                            @Html.TextBox("OrderDate", "dd-MM-yyyy", new { @class = "form-control", @placeholder = "Tarih", @id = "txtMSTarihi", @type = "date", @style = "height:30px !important;" })
                        </div>
                        <div class="col-lg-6">
                            <h6 class="text-muted">Telefon No</h6>
                            @Html.TextBox("PhoneNumber", "", new { @class = "form-control", @placeholder = "Telefon", @id = "txtMTelefon", @style = "height:30px !important;" })
                            <h6 class="text-muted"> Açıklama </h6>
                            @Html.TextBox("Description", "", new { @class = "form-control", @placeholder = "Açıklama", @id = "txtMAciklama", @style = "height:30px !important;" })
                        </div>
                    </div>
                  
                    <div class="row" style="margin-top:10px;" >
                        <div class="col-lg-12" style="margin-top:10px;">
                            <div class="col-lg-3">
                                <select class="my-select" name="pfilter" title="Ürün Listesi" id="drpMUrunListe">
                                    <option>Ürün Seç..</option>
                                    <option data-img-src="../img/producticons/1'.png" value="1">KAP</option>
                                    <option data-img-src="../img/producticons/2'.png" value="2">Elbise</option>
                                    <option data-img-src="../img/producticons/3'.png" value="3">Abiye</option>
                                    <option data-img-src="../img/producticons/4'.png" value="4">Etek</option>
                                    <option data-img-src="../img/producticons/5'.png" value="5">Pardösü</option>
                                    <option data-img-src="../img/producticons/6'.png" value="6">Ferace</option>
                                    <option data-img-src="../img/producticons/7'.png" value="7">Tunik</option>
                                    <option data-img-src="../img/producticons/8'.png" value="8">Gömlek</option>
                                    <option data-img-src="../img/producticons/9'.png" value="9">Ceket</option>
                                    <option data-img-src="../img/producticons/10'.png" value="10">Palto</option>
                                    <option data-img-src="../img/producticons/11'.png" value="11">Kaban</option>
                                    <option data-img-src="../img/producticons/12'.png" value="12">T-Shirt</option>
                                    <option data-img-src="../img/producticons/13'.png" value="13">Mont</option>
                                    <option data-img-src="../img/producticons/14'.png" value="14">Pantolon</option>
                                    <option data-img-src="../img/producticons/15'.png" value="15">Eşofman</option>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <select class="my-select2" name="ofilter" title="İşlem Listesi" id="drpMIslemListe">
                                    <option>İşlem Seç..</option>
                                </select>
                            </div>                         
                            <div class="col-lg-2">
                                @Html.TextBox("Quantity", "1", new { @class = "form-control", @placeholder = "Adet", @id = "txtMAdet", @type = "number" })
                            </div>
                            <div class="col-lg-2">
                                @Html.TextBox("Price", "", new { @class = "form-control", @placeholder = "Tutar", @id = "txtMPrice" })
                            </div>                           
                            <div class="col-lg-1">
                                <input type="button" name="btnUrunEkle" value="Ekle" id="btnUrunEkle" class="btn btn-default" />
                            </div>
                            <div class="divider"></div>
                            <br />
                        </div>
                        <div class="modal-footer" id="divOrderDetail">
                            <table class="table table-striped text-left">
                                <thead>
                                    <tr>
                                        <td></td>
                                        <td>Tadilat</td>
                                        <td>Adet</td>
                                        <td>B.Tutar</td>
                                    </tr>
                                </thead>
                                <tbody id="tabloveri"><!--Tablo Dolduruluyor--></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-warning" name="btnSiparisKaydet" value="Kaydet" id="btnSiparisKaydet"/>
                    @*<button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>*@
                </div>
                </div>

            </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Checkbox, Radio & Switch Plugins -->

    <script src="~/assets/js/bootstrap-checkbox-radio-switch.js"></script>
    <!--  Charts Plugin -->
    <script src="~/assets/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/assets/js/bootstrap-notify.js"></script>
    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="~/assets/js/light-bootstrap-dashboard.js"></script>
    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="~/assets/js/demo.js"></script>
    <!-- Benim javascript dosyam -->
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script src="~/Scripts/ImageSelect.jquery.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/myorder.js"></script>
</body>
</html>
